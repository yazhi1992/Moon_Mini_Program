<!--miniprogram/pages/history/history.wxml-->
<view class='root'>
  <header show_back="{{false}}" title="回忆"></header>
  <view class='itemBox'>
    <image class='userImg' src='{{userImgUrl}}'></image>
    <view class='contentDetail'>
      <text class='userNameText'>{{userName}}</text>
      <text class='contentText'>{{content}}</text>
      <image class='contentImg' src='{{imgUrl}}'></image>
      <view class='commentBox'>
        <text class='commentText'>{{comment}}</text>
      </view>
      <view style="display:flex;align-items:center">
        <text class='timeText'>{{time}}</text>
        <image class='commentImg' src='./comment_icon.png'></image>
      </view>
    </view>
  </view>
</view>